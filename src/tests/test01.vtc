varnishtest "Smoke test"

server s1 {
       rxreq
       txresp
} -start

varnish v1 -vcl+backend {
	import named from "${vmod_topbuild}/src/.libs/libvmod_named.so";

	sub vcl_init {
		new d1 = named.director("localhost", "${s1_port}");
	}

	sub vcl_recv {
		set req.backend_hint = d1.backend();
	}
} -start

client c1 {
	txreq
	rxresp
	expect resp.status == 200
} -run

varnish v1 -expect VBE.vcl1.d1(${s1_addr}).req == 1
